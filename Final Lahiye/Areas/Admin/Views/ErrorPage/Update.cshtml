@model UpdateErrorPageVM
<div class="container">
    <h1 class="text-center">Update Error Page</h1>
      <img src="~/images/@Model.Image" width="500px" height="500px"/>
      <div class="row">
             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">      
                  <div class="form-group">
                   <input asp-for="Message" class="form-control" placeholder="Message">
                 </div>  
                 <div class="form-group">
                   <label>Error Image</label>
                   <input asp-for="Photo" class="form-control">
                 </div>           
                 <button type="submit" class="btn btn-outline-success me-2">Update</button>
                 <input type="hidden" asp-for="Id"/>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
      </div>
</div>