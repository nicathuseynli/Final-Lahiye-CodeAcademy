@model UpdateElementorWidgetVM
<div class="container">
    <h1 class="text-center">Update Elementor Widget</h1>
      <img src="~/images/@Model?.ElementorDownImage" width="300px" height="500px"/>
      <img src="~/images/@Model?.ElementorUpImage" width="300px" height="500px"/>
      <div class="row">
             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                   <label>Elementor Up Image</label>
                   <input asp-for="ElementorUpPhoto" class="form-control">
                 </div>
                 <div class="form-group">
                   <label>Elementor Down Image</label>
                   <input asp-for="ElementorDownPhoto" class="form-control">
                 </div>           
                 <button type="submit" class="btn btn-outline-success me-2">Update</button>
                 <input type="hidden" asp-for="Id"/>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
      </div>
</div>
