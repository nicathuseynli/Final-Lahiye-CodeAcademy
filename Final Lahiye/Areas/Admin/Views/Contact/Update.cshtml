@model UpdateContactVM
<div class="container">
    <h3 class="text-center">Update Contact</h3>
      <img src="~/images/@Model.Image" width="500px" height="500px"/>
      <div class="row">
             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
                 <div class="form-group">
                   <input asp-for="ByAddress" class="form-control" placeholder="ByAddress">
                 </div>            
                 <div class="form-group">
                   <input asp-for="ByEmail" class="form-control" placeholder="ByEmail">
                 </div>             
                 <div class="form-group">
                   <input asp-for="ByPhone" class="form-control" placeholder="ByPhone">
                 </div>           
                 <div class="form-group">
                   <input asp-for="Magazine" class="form-control" placeholder="Magazine">
                 </div>        
                 <div class="form-group">
                   <input asp-for="City" class="form-control" placeholder="City">
                 </div>
                 <div class="form-group">
                   <input asp-for="Description" class="form-control"placeholder="Description">
                 </div>
                 <div class="form-group">
                   <label>Contact Image</label>
                   <input asp-for="Photo" class="form-control">
                 </div>
                 <button type="submit" class="btn btn-outline-success me-2">Update</button>
                 <input type="hidden" asp-for="Id"/>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
      </div>
</div>
