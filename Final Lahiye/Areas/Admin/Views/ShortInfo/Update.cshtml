@model UpdateShortInfoVM
<div class="container">
    <h1 class="text-center">Update ShortInfo</h1>
      <div class="row">
             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
                  <div class="form-group">
                   <input asp-for="Title" class="form-control" placeholder="Title">
                 </div>         
                 <div class="form-group">
                   <input asp-for="Information" class="form-control" placeholder="Information">
                 </div>  
                 <div class="form-group">
                   <label>Icon</label>
                   <input asp-for="IconPhoto" class="form-control">
                 </div>
                 <button type="submit" class="btn btn-outline-success me-2">Update</button>
                 <input type="hidden" asp-for="Id"/>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
      </div>
</div>

