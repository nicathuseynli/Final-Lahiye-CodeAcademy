@model CreateContactDetailsVM
<div class="container">
    <h1 class="text-center">Create Contact Page</h1>
      <div class="row">
             <form asp-action="Create" method="post" class="forms-sample" enctype="multipart/form-data">
                 <div class="form-group">
                   <input asp-for="ByAddress" class="form-control" placeholder="ByAddress">
                 </div>
                 <div class="form-group">
                   <input asp-for="ByEmail" class="form-control"placeholder="ByEmail">
                 </div>      
                 <div class="form-group">
                   <input asp-for="ByPhone" class="form-control"placeholder="ByPhone">
                 </div>           
                 <button type="submit" class="btn btn-outline-success me-2">Create</button>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
    </div>
</div>