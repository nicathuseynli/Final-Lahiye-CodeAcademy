@model CreateBlogPageVM
<div class="container">
    <h1 class="text-center">Create Blog</h1>
      <div class="row">
             <form asp-action="Create" method="post" class="forms-sample" enctype="multipart/form-data">
                 <div class="form-group">
                  <select asp-for="AuthorId" asp-items="@ViewBag.Author"><option value="0">Select Author </option></select>
                 </div>      
                 <div class="form-group">
                   <input asp-for="Title" class="form-control" placeholder="Title">
                 </div>  
                 <div class="form-group">
                   <label>Blog Image</label>
                   <input asp-for="Photo" class="form-control">
                 </div> 
                 <button type="submit" class="btn btn-outline-success me-2">Create</button>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
    </div>
</div>

