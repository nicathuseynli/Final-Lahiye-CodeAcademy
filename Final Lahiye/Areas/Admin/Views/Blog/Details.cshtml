@model Blog

<div class="container">
    <h1>HomeProduct Details</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/@Model.Image" class="img-fluid rounded mb-3" alt="@Model.Title image" />
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">@Model.Title</h4>
                    <p><strong>@Model.HeaderUp:</strong> @Model.InformationUp</p>
                    <p><strong>@Model.HeaderMiddle:</strong> @Model.InformationMiddle</p>
                    <p><strong>@Model.HeaderEnd:</strong> @Model.InformationEnd</p>
                    <p><strong>@Model.ServiceInfo:</strong></p>
                    <ul>
                        <li>@Model.ServiceDescriptionFirst - @Model.ServiceNameFirst: @Model.ServicePriceFirst</li>
                        <li>@Model.ServiceDescriptionSecond - @Model.ServiceNameSecond: @Model.ServicePriceSecond</li>
                        <li>@Model.ServiceDescriptionThird - @Model.ServiceNameThird: @Model.ServicePriceThird</li>
                        <li>@Model.ServiceDescriptionFourth - @Model.ServiceNameFourth: @Model.ServicePriceFourth</li>
                    </ul>
                    <p><strong>@Model.MiddleDescription:</strong></p>
                    <ul>
                        <li>@Model.MiddleTextFirst</li>
                        <li>@Model.MiddleTextSecond</li>
                        <li>@Model.MiddleTextThird</li>
                        <li>@Model.MiddleTextFourth</li>
                    </ul>
                    <p><strong>@Model.ApplyInfo:</strong></p>
                    <div class="row">
                        <div class="col-md-6">
                            <img src="~/images/@Model.ApplyInfoLeftImage" class="img-fluid rounded" alt="Apply Info Left Image" />
                        </div>
                        <div class="col-md-6">
                            <img src="~/images/@Model.ApplyInfoRightImage" class="img-fluid rounded" alt="Apply Info Right Image" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
