@model CreateHomeProductVM
<div class="container">
    <h1 class="text-center">Create Home Product</h1>
      <div class="row">
             <form asp-action="Create" method="post" class="forms-sample" enctype="multipart/form-data">
                 <div class="form-group">
                  <select asp-for="CategoryId" asp-items="@ViewBag.Category"><option value="0">Select Category</option></select>
                 </div>     
                 <div class="form-group">
                  <select asp-for="ColourId" asp-items="@ViewBag.Colour"><option value="0">Select Colour</option></select>
                 </div>       
                 <div class="form-group">
                   <input asp-for="Header" class="form-control" placeholder="Header">
                 </div>      
                 <div class="form-group">
                   <input asp-for="Name" class="form-control" placeholder="Name">
                 </div>  
                 <div class="form-group">
                   <input asp-for="LastPrice" class="form-control" placeholder="LastPrice">
                 </div>
                 <div class="form-group">
                   <input asp-for="CurrentPrice" class="form-control" placeholder="CurrentPrice">
                 </div>                
                 <div class="form-group">
                   <input asp-for="DeliveryInfo" class="form-control" placeholder="DeliveryInfo">
                 </div>              
                 <div class="form-group">
                   <input asp-for="ShippingInfo" class="form-control" placeholder="ShippingInfo">
                 </div>               
                 <div class="form-group">
                   <input asp-for="Rating" class="form-control" placeholder="Rating">
                 </div>               
                 <div class="form-group">
                   <input asp-for="SKUCode" class="form-control" placeholder="SKUCode">
                 </div>               
                 <div class="form-group">
                   <input asp-for="Description" class="form-control" placeholder="Description">
                 </div>               
                 <div class="form-group">
                   <input asp-for="Style" class="form-control" placeholder="Style">
                 </div>               
                 <div class="form-group">
                   <input asp-for="RoomType" class="form-control" placeholder="RoomType">
                 </div>              
                 <div class="form-group">
                   <input asp-for="IdealFor" class="form-control" placeholder="IdealFor">
                 </div>               
                 <div class="form-group">
                   <input asp-for="Capacity" class="form-control" placeholder="Capacity">
                 </div>               
                 <div class="form-group">
                   <input asp-for="Shape" class="form-control" placeholder="Shape">
                 </div>              
                 <div class="form-group">
                   <input asp-for="SalePercent" class="form-control"placeholder="SalePercent">
                 </div>          
                 <div class="form-group">
                   <input asp-for="Count" class="form-control"placeholder="Count">
                 </div>
                 <div class="form-group">
                   <label>Home Product Image</label>
                   <input asp-for="Photo" class="form-control">
                 </div> 
                 <button type="submit" class="btn btn-outline-success me-2">Create</button>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
    </div>
</div>
