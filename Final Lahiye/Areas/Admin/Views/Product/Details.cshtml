@model HomeProduct

<div class="container">
    <h1>HomeProduct Details</h1>
    <div class="row">
        <div>
            <img src="~/images/@Model.Image" width="500px" height="500px"/>
            <h1>@Model.Header</h1>
            <h1>@Model.Name</h1>
            <h1>@Model.LastPrice</h1>
            <h1>@Model.CurrentPrice</h1>
            <h1>@Model.SalePercent</h1>
            <h1>@Model.InStock</h1>
            <h1>@Model.Image</h1>
            <h1>@Model.Category</h1>
            <h1>@Model.Colour</h1>
        </div>
    </div>
</div>
