@model HomeProduct

<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/@Model.Image" class="img-fluid rounded" alt="@Model.Name"/>
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Header</p>
            <hr>
            <p>@Model.Description</p>
            <h3>Price: @Model.CurrentPrice ( <del>@Model.LastPrice</del> )</h3>
            <h4>Sale: @Model.SalePercent%</h4>
            <p>SKU: @Model.SKUCode</p>
            <p>Room Type: @Model.RoomType</p>
            <p>Capacity: @Model.Capacity</p>
            <p>Ideal For: @Model.IdealFor</p>
            <p>Shape: @Model.Shape</p>
            <p>Style: @Model.Style</p>
            <p>Category: @Model.Category</p>
            <p>Colour: @Model.Colour</p>
            <p>Delivery Info: @Model.DeliveryInfo</p>
            <p>Shipping Info: @Model.ShippingInfo</p>
            <h3>Rating: @Model.Rating</h3>
            <p>Stock: @Model.Count</p>
        </div>
    </div>
</div>
