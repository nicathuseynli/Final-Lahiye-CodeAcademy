@model Banner

<div class="container my-5">
    <h3 class="text-center mb-4">About Banner</h3>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <img src="~/images/@Model.BannerImage" class="card-img-top" alt="@Model.Title">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                </div>
            </div>
        </div>
    </div>
</div>
