@model ShopVM
<main>
    <section>
      <div class="container">
        <div class="row mt-5">
          <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-xsm-3 col-3 leftSidebar">
            <div id="sidebar" class="left_aside">
              <div class="col-xxl-11 col-xl-11 col-lg-11 col-md-11 col-xsm-11 col-12 m-auto">
                <div class="titleShop">
                  <div class="sideBarHeader">
                    <span class="sideBarHeader"><a id="sideBarHeaderClick" name="Path" asp-controller="Home" asp-action="Index" >Home</a><b> /
                       @Model.Category.Name</b></span>
                  </div>
                  <h6 class="sideBarCategory">Categories</h6>
                </div>
                <div class="sideBarItem">
                    @foreach (var category in Model.Categories)
                    {
                      <div class="sideBarForm">
                          <a asp-route-categoryId="@category.Id" name="@category.Name" class="sidebarCat">@category.Name <span>(@category.Products?.Count())</span></a>
                      </div>
                    }
                </div>
              </div>
              <div class="col-xxl-11 col-xl-11 col-lg-11 col-md-11 col-xsm-11 col-12 m-auto">
                <div class="titleShop">
                  <h6>Price</h6>
                </div>
                <div class="sideBarItem">
                  <div class="wrapper">
                    <fieldset class="filter-price">
                      <div class="price-field">
                        <input type="range" min="60" max="560" value="60" id="lower">
                        <input type="range" min="60" max="560" value="560" id="upper">
                      </div>
                      <div class="price-wrap">
                        <div class="price-wrap-1">
                          <input id="one">
                          <label for="one">$</label>
                        </div>
                        <div class="price-wrap_line">-</div>
                        <div class="price-wrap-2">
                          <input id="two">
                          <label for="two">$</label>
                        </div>
                      </div>
                    </fieldset>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xxl-11 col-xl-11 col-lg-11 col-md-11 col-xsm-11 col-12 m-auto">
              <div class="titleShop">
                <h6>Colors</h6>
              </div>
              <div class="sideBarItem">
                  @foreach (var colour in Model.Colours)
                  {                         
                    <div class="sideBarForm">
                     <input type="checkbox" asp-route-colourId="@colour.Id" name="@colour.Name">
                     <label for="Copper Red">@colour.Name <span>(@colour.Products?.Count())</span</label>
                    </div>
                  }
              </div>
            </div>
            <div class="col-xxl-11 col-xl-11 col-lg-11 col-md-11 col-xsm-11 col-12 m-auto">
              <div class="titleShop">
                <h6>Stock Status</h6>
              </div>
              <div class="sideBarItem">
                <div class="sideBarForm">
                  <input type="checkbox" name="In Stock" id="In Stock">
                  <label for="In Stock">In Stock (8)</label>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-9 col-xsm-9 col-9 pt-5">
            <div class="row justify-content-center">
              <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="container">
                  <div class="row justify-content-end align-items-center">
                    <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12  col-xsm-12 col-12">
                      <div class=" d-flex justify-content-between">
                        <div class="shop-product-count">
                          <p>Showing all @Model.Products.Count() results</p>
                        </div>
                        <ul class="nav faqSection tab-style-1" id="myTab" role="tablist">
                          <li class="nav-item mb-4" role="presentation">
                            <a class="OneBtn active" id="Description-tab" data-bs-toggle="tab" href="#Description"
                              role="tab" aria-controls="Description" aria-selected="true">
                              <i class="fa fa-th me-3"></i>
                            </a>
                          </li>
                          <li class="nav-item" role="presentation">
                            <a id="Review-tab" class="SecondBtn disable" data-bs-toggle="tab" href="#Review" role="tab"
                              aria-controls="Review" aria-selected="false">
                              <i class="fa-solid fa-table-list"></i>
                            </a>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  <div class="row justify-content-center  gy-4 mb-5">
                    <div class="tab-content" id="myTabContent">
                      <div class="tab-pane fade show active" id="Description" role="tabpanel"
                        aria-labelledby="Description-tab">
                        <div class="row">
                            @foreach (var shopProduct in Model.Products)
                            {
                             <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-4 col-sm-6 col-12">
                            <div class="home-product">
                              <div class="home-product-content">
                                <div class="home-product-item">
                                  <div class="home-product-img">
                                    <span class="home-product-discount">-@shopProduct.SalePercent%</span>
                                    <div class="home-product-icon">
                                      <div class="home-product-icon-item">
                                        <a href="wishlist.html"></a>
                                      </div>
                                      <a asp-controller="Shop" asp-action="Product" asp-route-id="@shopProduct.Id" class="home-product-icon-two"></a>
                                      <a href="basket.html" class="home-product-icon-three">
                                      </a>
                                    </div>
                                    <a  asp-controller="Shop" asp-action="Product" asp-route-id="@shopProduct.Id"  >
                                      <img decoding="async" loading="lazy" alt="custom-image" class="primary-img"
                                        src="~/images/@shopProduct.Image"
                                        height="auto" width="800">
                                    </a>
                                  </div>
                                </div>
                              </div>
                              <div class="home-product-desc">
                                <div class="home-product-desc-item">
                                  <h5 class="home-produtc-title">
                                    <a href="singleproduct.html">@shopProduct.Name</a>
                                  </h5>
                                  <h6 class="home-product-price">
                                    <del class="home-product-oldPrice">$@shopProduct.LastPrice</del>
                                    <span class="home-product-newPrice">$@shopProduct.CurrentPrice</span>
                                  </h6>
                                </div>
                              </div>
                            </div>
                          </div>
                            }
                        </div>
                      </div>
                      <div class="tab-pane fade" id="Review" role="tabpanel" aria-labelledby="Review-tab">
                        <div class="container">
                          <div class="row">
                            <div class="tab-pane fade show active" id="Description" role="tabpanel"
                              aria-labelledby="Description-tab">
                              <div class="row">
                        <div class="row">
                            @foreach (var shopProduct in Model.Products)
                            {
                             <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-4 col-sm-6 col-12">
                            <div class="home-product">
                              <div class="home-product-content">
                                <div class="home-product-item">
                                  <div class="home-product-img">
                                    <span class="home-product-discount">-@shopProduct.SalePercent%</span>
                                    <div class="home-product-icon">
                                      <div class="home-product-icon-item">
                                        <a href="wishlist.html"></a>
                                      </div>
                                      <a asp-controller="Shop" asp-action="Product" asp-route-id="@shopProduct.Id" class="home-product-icon-two"></a>
                                      <a href="basket.html" class="home-product-icon-three">
                                      </a>
                                    </div>
                                    <a  asp-controller="Shop" asp-action="Product" asp-route-id="@shopProduct.Id"  >
                                      <img decoding="async" loading="lazy" alt="custom-image" class="primary-img"
                                        src="~/images/@shopProduct.Image"
                                        height="auto" width="800">
                                    </a>
                                  </div>
                                </div>
                              </div>
                              <div class="home-product-desc">
                                <div class="home-product-desc-item">
                                  <h5 class="home-produtc-title">
                                    <a href="singleproduct.html">@shopProduct.Name</a>
                                  </h5>
                                  <h6 class="home-product-price">
                                    <del class="home-product-oldPrice">$@shopProduct.LastPrice</del>
                                    <span class="home-product-newPrice">$@shopProduct.CurrentPrice</span>
                                  </h6>
                                </div>
                              </div>
                            </div>
                          </div>
                            }
                        </div>

                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>
  </main>
