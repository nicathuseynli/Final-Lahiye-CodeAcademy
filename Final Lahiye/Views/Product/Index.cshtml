                                        <li class="shopDetailsProductRetingItem"><i class="fa-solid fa-star"></i></li>
                                        <li class="shopDetailsProductRetingItem"><i class="fa-solid fa-star"></i></li>
                                        <li class="shopDetailsProductRetingItem"><i class="fa-solid fa-star"></i></li>
                                        <li class="shopDetailsProductRetingItem"><i class="fa-regular fa-star"></i></li>
                                      </ul>
                                    </span>
