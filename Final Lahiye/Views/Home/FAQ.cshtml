@model FAQVM  
  
<div class="contact-header mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center h-100">
            <h1>FAQ</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">FAQ</a></li>
                  <li class="breadcrumb-item active" aria-current="page">All</li>
                </ol>
              </nav>
        </div>
    </div>    
<main class="main-content">
        <div class="breadcrumb-area breadcrumb-height">
            <div class="container h-100">
                <div class="row h-100">
                    <div class="col-lg-12">
                        <div class="breadcrumb-item">
                            <ul>
                                <li>
                                    <a asp-controller="Home" asp-action="Index" class="faqbanerBtn">Back To Home</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="faq-area section-space-y-axis-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="frequently-area">
                            <h2 class="heading mb-0">General Questions</h2>
                            <div class="row">
                                <div class="col-md-6  pt-30 pt-md-0">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="accordion" id="accordionExample">
                                                @{int accardionCount = 1;}
                                            @foreach (var accardion in Model.Faqs.OrderBy(x=>x.Id).Take(4))
                                            {
                                                <div class="accordion-item">
                                                    <h2 class="accordion-header" id="headingFirst">
                                                        <button class="accordion-button" type="button"
                                                            data-bs-toggle="collapse" data-bs-target="#collapse-@accardionCount"
                                                            aria-expanded="true" aria-controls="collapseFirst">
                                                            @accardion.Question
                                                        </button>
                                                    </h2>
                                                    <div id="collapse-@accardionCount" class="accordion-collapse collapse show"
                                                        aria-labelledby="headingFirst" data-bs-parent="#accordionExample">
                                                        <div class="accordion-body">
                                                            <p>@accardion.Answer</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                accardionCount++;
                                            }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 pt-30 pt-md-0">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="accordion" id="accordionExample">
                                                     @foreach (var accardion in Model.Faqs.OrderByDescending(x=>x.Id).Take(4))
                                            {
                                                <div class="accordion-item">
                                                    <h2 class="accordion-header" id="headingFirst">
                                                        <button class="accordion-button" type="button"
                                                            data-bs-toggle="collapse" data-bs-target="#collapse-@accardionCount"
                                                            aria-expanded="true" aria-controls="collapseFirst">
                                                            @accardion.Question
                                                        </button>
                                                    </h2>
                                                    <div id="collapse-@accardionCount" class="accordion-collapse collapse show"
                                                        aria-labelledby="headingFirst" data-bs-parent="#accordionExample">
                                                        <div class="accordion-body">
                                                            <p>@accardion.Answer</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                accardionCount++;
                                            }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</main>
