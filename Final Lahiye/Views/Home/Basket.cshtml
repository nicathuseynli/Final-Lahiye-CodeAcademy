@model List<ProductBasketVM>

<div class="contact-header mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center h-100">
        <h1>Cart</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Cart</a></li>
                <li class="breadcrumb-item active" aria-current="page">All</li>
            </ol>
        </nav>
    </div>
</div>
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <ul>
                            <!-- <li>
                                <a href="index.html">Back to Home</a>
                            </li> -->
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="">
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="product_remove">remove</th>
                                        <th class="product-thumbnail">images</th>
                                        <th class="cart-product-name">Product</th>
                                        <th class="product-price">Unit Price</th>
                                        <th class="product-subtotal">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var basket in Model)
                                    {
                                        <tr>
                                            <td class="product_remove">
                                                <a href="#">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </td>


                                            <td class="product-thumbnail">
                                                <a href="#">
                                                    <img class="cartImage" src="~/images/@basket.Image"
                                                     alt="Cart Thumbnail" />
                                                </a>
                                            </td>
                                            <td class="product-name">
                                                <a href="#">@basket.Name</a>
                                            </td>
                                            <td class="product-price">
                                                <span class="amount">$ @basket.Price</span>
                                            </td>
                                            <td class="product-subtotal">
                                                <span class="amount">$@basket.Count</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-5 ml-auto">
                                <div class="cart-page-total">
                                    <h2>Cart totals</h2>
                                    <ul>
                                        <li>Subtotal <span></span></li>
                                        <li>Total <span>$Total</span></li>
                                    </ul>
                                    <a asp-controller="Shop" asp-action="Checkout">Proceed to checkout</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>